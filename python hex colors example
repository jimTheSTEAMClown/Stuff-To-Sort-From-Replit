while True:
  user_hex = input("give me a hex color > ")
  print(user_hex)
  if user_hex[0] == "#":
    user_red = int(user_hex[1:3],16) * (100/255)
    print(user_red)
    user_green = int(user_hex[3:5],16) * (100/255)
    print(user_green)
    user_blue = int(user_hex[5:7],16) * (100/255)
    print(user_blue)
    
  else:
    print("enter valid data like #ff34b1")
