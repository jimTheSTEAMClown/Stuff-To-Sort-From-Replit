fruit = 'bananaananananx'
print(fruit)

char = fruit[1]
print(char)

length = len(fruit)
print(length)
print(fruit[-3])

index = 0
while index < len(fruit):
    letter = fruit[index]
    print(letter,end='')
    index = index + 1
print()  

word = 'banana@gmail.com'
print(word)
count = 0
for letter in word:
  #print(letter,end='')
  if letter == '@':
    count = count + 1
print(count)

s = 'MontyPython'
print(s[0:5])
print(s[6:12])

greeting = 'Hello, world!'
new_greeting = 'J' + greeting[1:]
print(new_greeting)

word = input('enter a word ')
#word = 'xyxx'
if word < 'banana':
    print('Your word, ' + word + ', comes before banana.')
elif word > 'banana':
    print('Your word, ' + word + ', comes after banana.')
else:
    print('All right, bananas.')

if 'world' in word:
  print('yes it is') 


word = 'banana'
new_word = word.upper()
print(new_word)
